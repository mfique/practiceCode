}
.main-nav a.active {
  background-color: #2ecc71;
  color: #fff;
  padding: 8px 16px;
  border-radius: 5px;
}

.main-nav a:hover {
  color: #2ecc71;
}

.main-nav a::after {
  content: "";
  display: block;
  width: 0;
  height: 2px;
  background-color: #2ecc71;
  transition: width 0.3s ease-in-out;
}

.main-nav a:hover::after {
  width: 100%;
}

.main-content {
