.container {
  max-width: 1500px;
  margin: 0 auto;
  padding: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.site-header {
  border-radius: 300px;
  position: fixed;
  width: 100%; /* Use 100% width for responsiveness */
  top: 0;
  z-index: 1000;
